<div class="d-flex justify-content-center">
  <h1><strong>Edit page</strong></h1>
</div>
<div class="card">
  <div class="card-body row">
    <form id="form-edit" action="" method="post">
      <div class="col-3 offset-4">
        Username: <%= @item['username'] %>
        <input readonly style="display: none" name="user" id="user" value="<%= @item["username"] %>">
      </div>
      <div class="col-3 offset-4 mt-3">
        Password: <input type="text" id="pass" name="pass" placeholder="Enter new password to change">
      </div>
      <div class="col-3 offset-4 mt-3">
        Role:
        <select name="role" id="role">
          <% @listrole.each do |x| %>
            <option value="<%= x['id'] %>"><%= x['name'] %></option>
          <% end %>
        </select>
      </div>
      <div class="col-3 offset-4 mt-3">
        Status:
        <select name="status" id="status">
          <% @liststatus.each do |x| %>
            <option value="<%= x['id'] %>"><%= x['name'] %></option>
          <% end %>
        </select>
      </div>
    </form>
    <div class="col-4 offset-4 mt-3">
      <%= link_to "Back", info_path, class: "btn btn-primary float-start me-2" %>
      <button id="submit-edit-form" class="btn btn-primary">Save</button>
    </div>
  </div>
</div>
<script>
    $(document).ready(function () {
        $('#role option[value = "<%= @item['role_id'] %>"]').attr('selected', 'selected');
        $('#status option[value = "<%= @item['status_id'] %>"]').attr('selected', 'selected');
    });
    const user = '<%= @item["username"] %>'
</script>
<%= javascript_pack_tag "edit" %>